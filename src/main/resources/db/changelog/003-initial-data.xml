<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="003-insert-sample-machines" author="aeos">
        <description>Insert sample machine data</description>
        <insert tableName="machines">
            <column name="machine_id" value="M-001"/>
            <column name="name" value="Industrial Pump Unit 1"/>
            <column name="location" value="Factory Floor A"/>
            <column name="status" value="ACTIVE"/>
        </insert>
        <insert tableName="machines">
            <column name="machine_id" value="M-002"/>
            <column name="name" value="Compressor System B"/>
            <column name="location" value="Factory Floor B"/>
            <column name="status" value="ACTIVE"/>
        </insert>
        <insert tableName="machines">
            <column name="machine_id" value="M-003"/>
            <column name="name" value="HVAC Control Unit"/>
            <column name="location" value="Building Management"/>
            <column name="status" value="ACTIVE"/>
        </insert>
    </changeSet>

    <changeSet id="003-insert-sample-models" author="aeos">
        <description>Insert initial ML models metadata</description>
        <insert tableName="ml_models">
            <column name="model_name" value="LinearRegression_v1"/>
            <column name="model_type" value="REGRESSION"/>
            <column name="version" value="1.0.0"/>
            <column name="accuracy" value="85.50"/>
            <column name="status" value="ACTIVE"/>
        </insert>
        <insert tableName="ml_models">
            <column name="model_name" value="EnsembleModel_v2"/>
            <column name="model_type" value="ENSEMBLE"/>
            <column name="version" value="2.0.0"/>
            <column name="accuracy" value="92.30"/>
            <column name="status" value="ACTIVE"/>
        </insert>
        <insert tableName="ml_models">
            <column name="model_name" value="AnomalyDetector_v1"/>
            <column name="model_type" value="ANOMALY_DETECTION"/>
            <column name="version" value="1.0.0"/>
            <column name="accuracy" value="88.75"/>
            <column name="status" value="ACTIVE"/>
        </insert>
    </changeSet>

</databaseChangeLog>
